{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "types": ["node", "hardhat"],
    "baseUrl": "."
  },
  "include": ["hardhat.config.ts", "scripts", "test", "typechain"],
  "exclude": ["node_modules", "dist"]
}
